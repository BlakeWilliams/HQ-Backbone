<div class="project-top">
  <% if @editTitle == true: %>
    <input type="text" class='title-input' value="<%= @project.get 'name' %>"/>
  <% else: %>
    <h1 class="title"><%= @project.get 'name' %></h1>
    <a class="options"><i class="icon-cog"></i></a>
  <% end %>
</div>
<p><%= @project.get 'description' %></p>
